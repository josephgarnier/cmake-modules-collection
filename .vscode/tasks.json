{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Project: Clean",
      "detail": "Clean bin, build and doc directories",
      "type": "shell",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "linux": {
        "command": "./clean-cmake.sh"
      },
      "windows": {
        "command": "clean-cmake.bat"
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "dedicated",
        "showReuseMessage": false,
        "clear": true
      },
      "problemMatcher": []
    },
    {
      "label": "Project: Generate",
      "detail": "Configure and generate the CMake project",
      "type": "shell",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "linux": {
        "command": "./run-cmake.sh"
      },
      "windows": {
        "command": "run-cmake.bat"
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "dedicated",
        "showReuseMessage": false,
        "clear": true
      },
      "problemMatcher": []
    },
    {
      "label": "Project: Clean and Generate",
      "detail": "Clean, configure and generate the CMake project",
      "type": "shell",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "linux": {
        "command": "./clean-cmake.sh && echo \"\" && ./run-cmake.sh"
      },
      "windows": {
        "command": "clean-cmake.bat && echo. && run-cmake.bat"
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "dedicated",
        "showReuseMessage": false,
        "clear": true
      },
      "problemMatcher": []
    },
    {
      "label": "CMake: Clean",
      "detail": "Clean bin, build and doc directories",
      "type": "cmake",
      "options": {
        "cwd": "${workspaceFolder}/build"
      },
      "command": "clean",
      "preset": "${command:cmake.activeBuildPresetName}",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "dedicated",
        "showReuseMessage": false,
        "clear": true
      },
      "problemMatcher": []
    },
    {
      "label": "CMake: Build all",
      "detail": "Build CMake default targets (all)",
      "type": "cmake",
      "options": {
        "cwd": "${workspaceFolder}/build"
      },
      "command": "build",
      "targets": [
        "all"
      ],
      "preset": "${command:cmake.activeBuildPresetName}",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "dedicated",
        "showReuseMessage": false,
        "clear": true
      },
      "problemMatcher": []
    },
    {
      "label": "CMake: Clean and Rebuild all",
      "detail": "Clean and rebuild CMake default targets (all)",
      "type": "cmake",
      "options": {
        "cwd": "${workspaceFolder}/build"
      },
      "command": "cleanRebuild",
      "targets": [
        "all"
      ],
      "preset": "${command:cmake.activeBuildPresetName}",
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "dedicated",
        "showReuseMessage": false,
        "clear": true
      },
      "problemMatcher": []
    },
    {
      "label": "CMake: Test",
      "detail": "Run module tests",
      "type": "cmake",
      "options": {
        "cwd": "${workspaceFolder}/build"
      },
      "command": "test",
      "preset": "${command:cmake.activeTestPresetName}",
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "dedicated",
        "showReuseMessage": false,
        "clear": true
      },
      "problemMatcher": []
    },
    {
      "label": "CMake: Doc",
      "detail": "Generate modules doc",
      "type": "shell",
      "options": {
        "cwd": "${workspaceFolder}/build/x64-Release-Win-GCC"
      },
      "command": "cmake --build . --target doc",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "dedicated",
        "showReuseMessage": false,
        "clear": true
      },
      "problemMatcher": []
    },
    {
      "label": "CMake: Workflow",
      "detail": "Builld default targets (all) and run module tests",
      "type": "cmake",
      "options": {
        "cwd": "${workspaceFolder}/build"
      },
      "command": "workflow",
      "preset": "${command:cmake.activeWorkflowPresetName}",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "dedicated",
        "showReuseMessage": false,
        "clear": true
      },
      "problemMatcher": []
    }
  ]
}